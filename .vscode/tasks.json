{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "opam",
            "args": ["exec", "dune", "exec", "bin/runner.exe"],
            "problemMatcher": ["$ocamlc"]
        },
        {
            "label": "tests",
            "type": "shell",
            "command": "opam",
            "args": ["exec", "dune", "runtest"],
            "problemMatcher": ["$ocamlc"]
        },
        {
            "label": "one test",
            "type": "shell",
            "command": "opam",
            "args": [
                "exec",
                "dune",
                "--",
                "exec",
                "lib/2022/14/test.exe",
                // "--",
                // "-only-test",
                // "Part1 Tests:8"
            ],
            "problemMatcher": ["$ocamlc"]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "opam",
            "args": ["exec", "dune", "build"],
            "problemMatcher": ["$ocamlc"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "opam",
            "args": ["exec", "dune", "clean"],
            "problemMatcher": []
        }
    ]
}
