    "version": "2.0.0",
    "tasks": [
        {
            "label": "run 2019",
            "type": "shell",
            "command": "dune",
            "args": [
                "exec",
                "bin/2019/runner.exe"
            ],
            "problemMatcher": []
        },
        {
            "label": "debug 2019",
            "type": "shell",
            "command": "dune",
            "args": [
                "exec",
                "bin/2019/runner.exe"
            ],
            "options": {
                "env": {
                    "OCAMLRunPARAM": "b"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "dune",
            "args": [
                "build"
            ],
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "dune",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        }
    ]
}