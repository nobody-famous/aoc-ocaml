{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run 2019",
            "type": "shell",
            "command": "opam",
            "args": ["exec", "dune", "exec", "bin/2019/runner.exe"],
            "problemMatcher": []
        },
        {
            "label": "debug 2019",
            "type": "shell",
            "command": "dune",
            "args": ["exec", "bin/2019/runner.exe"],
            "options": {
                "env": {
                    "OCAMLRunPARAM": "b"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "opam",
            "args": ["exec", "dune", "build"],
            "problemMatcher": ["$ocamlc"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "opam",
            "args": ["exec", "dune", "clean"],
            "problemMatcher": []
        }
    ]
}
